@model IEnumerable<MvcCoffee.Models.Coffee>;

@{

}


 <div class="">
        <div class="container mx-auto max-w-4xl py-28 px-8">
            <div class="flex flex-col mx-auto items-center pb-6">
                <h1 class="font-sans text-3xl md:text-4xl tracking-wide pb-2 text-center">Our Menu</h1>
                <img src="/imgs/coffee.jpg" alt="" class="h-20 w-24">
            </div>

            @if (Model.Count() > 0)
            {
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    @foreach(var cup in Model)
                    {
                        <div class="py-2 px-3 flex flex-col items-center mb-6 transition ease-in-out duration-100 hover:bg-gray-200">
                            <p class="font-sans text-2xl pb-2 font-bold">$@cup.Price</p>
                            <div class="py-4">
                                <img src="/imgs/a.jpg" alt="" class="h-26 mx-auto">
                            </div>
                            <h2 class="font-sans text-xl pb-3 font-bold"> @cup.Name </h2>
                            <p class="text-center"> @cup.Info </p>
                        </div>
                    }
                </div>
            }
            else 
            {
                <div class="h-64 flex flex-col justify-center">
                    <h1 class="text-3xl text-center text-red-500">Oops looks like we're not serving coffee now</h1>
                </div>
            }
        </div>
    </div>