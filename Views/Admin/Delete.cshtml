@model MvcCoffee.Models.Coffee;

@{

}


    <div class="container mx-auto max-w-lg py-28 px-5">
        <div class="pb-6">
            <h1 class="font-sans text-4xl tracking-wide pb-6 underline text-center">Delete a Coffee</h1>
        </div>
        <form asp-action="DeleteData">
             <input asp-for="Id" class="hidden"/>
            <div class="mb-3">
                <input asp-for="Name" disabled type="text" class="font-sans text-lg outline-none border-2 border-black py-1 px-3 w-full">
            </div>
            <div class="mb-3">
                <input asp-for="Info" disabled type="text" class="font-sans text-lg outline-none border-2 border-black py-1 px-3 w-full">
            </div>
            <div class="mb-6 grid grid-cols-2 gap-5">
                <div class="">
                    <input asp-for="Price" disabled type="number" class="font-sans text-lg outline-none border-2 border-black py-1 px-3 w-full">
                </div>
                <div class="">
                    <input asp-for="Image" disabled type="file" class="py-2">
                </div>
            </div>
           <div class="flex items-center gap-6">
               <button type="submit" class="text-white bg-red-600 w-full py-2">delete</button>
           </div>
        </form>
    </div>

    @section Scripts{
        @{ <partial name="_ValidationScriptsPartial"  />}
    }