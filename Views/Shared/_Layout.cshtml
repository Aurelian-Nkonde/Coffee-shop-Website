<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["heading"]</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/tailwind.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    
    <header class="bg-gray-900">
        <div class="container mx-auto  py-6">
            <div class="flex justify-around items-center">
                <div class="flex">
                    <img src="" alt="">
                    <a asp-controller="Info" asp-action="Index" class="font-sans border-t-2 border-yellow-700 text-2xl md:text-3xl tracking-wider text-white">Esta <span>Coffee_shop</span> </a>
                </div>
                <ul class="hidden  lg:flex">
                    <a asp-controller="Info" asp-action="Index" class="font-sans text-lg text-white mr-7 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">Home</a>
                    <a asp-controller="CoffeeMain" asp-action="Index" class="font-sans text-lg text-white mr-7 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">Menu</a>
                    <a asp-controller="CoffeeMain" asp-action="Order" class="font-sans text-lg text-white mr-7 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">Order</a>
                    <a asp-controller="Contact" asp-action="Index" class="font-sans text-lg text-white mr-7 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">Contact</a>
                    <a asp-controller="Info" asp-action="About" class="font-sans text-lg text-white mr-0 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">About</a>
                </ul>
                <div class="hidden lg:flex">
                    <a asp-controller="Admin" asp-action="Index" class="font-sans text-lg text-white bg-yellow-700 rounded-full py-2 px-7 transition ease-in-out duration-200 hover:bg-yellow-600">Admin</a>
                </div>
                <div class="lg:hidden cursor-pointer" id="btn">
                    <li class="bg-white h-1 w-10 my-1"></li>
                    <li class="bg-white h-1 w-10 my-1"></li>
                    <li class="bg-white h-1 w-10 my-1"></li>
                </div>
            </div>
        </div>
    </header>
    <div class="curten bg-gray-900 hidden lg:hidden" id="curten">
        <div class="container mx-auto py-10 px-10">
                <ul class="flex flex-col mb-6">
                    <a asp-controller="Info" asp-action="Index" class="font-sans text-lg text-white mr-7 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">Home</a>
                    <a asp-controller="CoffeeMain" asp-action="Index" class="font-sans text-lg text-white mr-7 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">Menu</a>
                    <a asp-controller="CoffeeMain" asp-action="Order" class="font-sans text-lg text-white mr-7 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">Order</a>
                    <a asp-controller="Contact" asp-action="Index" class="font-sans text-lg text-white mr-7 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">Contact</a>
                    <a asp-controller="Info" asp-action="About" class="font-sans text-lg text-white mr-0 tracking-wide border-b-2 border-transparent transition ease-in-out duration-150 hover:border-yellow-600">About</a>
                </ul>
                <div class="">
                    <a asp-controller="Admin" asp-action="Index" class="font-sans text-lg text-white bg-yellow-700 rounded-sm py-1 px-4 transition ease-in-out duration-200 hover:bg-yellow-600">Admin</a>
                </div>
        </div>
    </div>


    <section>
        <main>
            @RenderBody()
        </main>
    </section>

    <footer class="bg-black">
        <div class="container mx-auto max-w-4xl py-20">
            <h1 class="text-center text-2xl text-white pb-2">Esta Coffee_shop</h1>
            <p class="text-yellow-400 text-center">&copy; 2021</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
